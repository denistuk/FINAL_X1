#!/usr/bin/env groovy
// guess what type i am, and what i'm doing...
pipeline {
    agent any
    environment {

        DOCKER_HUB_USERNAME = "BAR"
        DOCKER_HUB_PASSWORD = ""
        DOCKERHUB_REPO_NAME = "denistuk/FINAL_X1"

    }
    stages {
        stage('CODE CLONE') {
            steps {
                git 'https://github.com/denistuk/FINAL_X1.git'
            }
        }
        stage('BUILD') {
            steps {
                sh 'mvn package'
                sh 'docker build -t FINAL_X1:${env.BUILD_ID} .'
                sh """
              docker login -u ${DOCKER_HUB_USERNAME} -p ${DOCKER_HUB_PASSWORD}
              docker tag FINAL_X1:${env.BUILD_ID} ${DOCKERHUB_REPO_NAME}:${env.BUILD_ID}
              docker push ${DOCKERHUB_REPO_NAME}:${env.BUILD_ID}
            """
            }
        }
        stage('TEST') {
            steps {
                sh 'echo "blabla"'
            }
        }
        stage('RELEASE') {
            steps {
                sh """
              docker login -u ${DOCKER_HUB_USERNAME} -p ${DOCKER_HUB_PASSWORD}
              docker tag ${DOCKERHUB_REPO_NAME}:${env.BUILD_ID} ${DOCKERHUB_REPO_NAME}:latest
              docker push ${DOCKERHUB_REPO_NAME}:latest
            """
            }
        }
        stage('Deploy(legacy)') {
            steps {
                sh """
                ansible-playbook deploy/war-deploy-playbook.yaml -i deploy/hosts
            """
            }
        }
        stage('DEPLOY (MODERN)') {
            steps {
                sh """
                kubectl apply -f deploy/k8s-deployment.yaml
            """
            }
        }
        
        
    }
    post {
        success {
            mail to: 'team@example.com',
                    subject: "passed Pipeline: ${currentBuild.fullDisplayName}",
                    body: "Something is OK with ${env.BUILD_URL}"
        }
        failure {
            // notify users when the Pipeline fails
            mail to: 'team@example.com',
                    subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
                    body: "Something is wrong with ${env.BUILD_URL}"
        }
    }
}
